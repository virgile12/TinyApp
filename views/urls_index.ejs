<!DOCTYPE html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="styles.css" type="text/css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
  <a href="/urls">Home</a>
</head>
<body style="font-size:20px; padding:50px;">
    <% include ./partials/_headers %>

    <h2><a href='urls/new'>Create Tiny Url</a></h2>
    <ul>
    <% for (let url in urls) { %>
        <li style="display: flex;"><%= url %> - <a href= '<%=  urls[url].longURL  %>'> <%= urls[url].longURL %> </a>
          <form method="POST" action="/urls/<%= url %>/delete"> 
            <div class="form-group mb-2"> 
              <button type="submit" class="btn btn-primary btn-space">Delete</button> 
          </form>
          </div>
          <form method="GET" action="/urls/<%= url %>">
            <div class="form-group mb-2"> 
              <button type="submit" class="btn btn-primary btn-space">edit</button>
            </div>
          </form>
        </li>
    <% }; %>
    </ul>
   
    
</body>
</html>